= FTS for Japanese1\n(('note:日本語の全文検索1'))

  # coderay sql
  SELECT
    to_tsvector('japanese',
                'こんにちは');
  -- ERROR:  text search configuration
  --         "japanese" does not exist
  -- LINE 2:   to_tsvector('japanese',
  --                       ^

= FTS for Japanese2\n(('note:日本語の全文検索2'))

  # coderay sql
  CREATE EXTENSION pg_trgm;
  SELECT 'こんにちは' % 'にちは';
  --                    ↑substring
  --  ?column? 
  -- ----------
  --  f ← Must be "t"!
  -- (1 row)

